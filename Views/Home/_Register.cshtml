@model User


<form asp-action="Register" asp-controller="Home">
    <h3 class="mt-5 mb-4">Register</h3>
    <div class="form-group">
        <label asp-for="First"></label>
        <span asp-validation-for="First" class="text-danger font-weight-bold"></span>
        <input asp-for="First" class="form-control" >
    </div>

    <div class="form-group">
        <label asp-for="Last"></label>
        <span asp-validation-for="Last" class="text-danger font-weight-bold"></span>
        <input asp-for="Last" class="form-control" >
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
        <input asp-for="Email" class="form-control" >
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
        <input asp-for="Password" class="form-control" >
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPswd"></label>
        <span asp-validation-for="ConfirmPswd" class="text-danger font-weight-bold"></span>
        <input asp-for="ConfirmPswd" class="form-control" >
    </div>

    <button type="submit" class="btn btn-outline-dark">Register</button>
</form>
