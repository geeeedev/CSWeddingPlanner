@model LoginUser


<form asp-action="Login" asp-controller="Home">
    <h3 class="mt-5 mb-4">Log In</h3>
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <div>       @* div keeps validation msg on a separate line *@
        <span asp-validation-for="LoginEmail" class="text-danger font-weight-bold"></span>
        </div>      @* div keeps validation msg on a separate line *@
        <input asp-for="LoginEmail" class="form-control" value="g@email.com">
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <div>
        <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold"></span>
        </div>
        <input asp-for="LoginPassword" class="form-control" value="12345678">
    </div>

    <button type="submit" class="btn btn-outline-dark">Login</button>
</form>


